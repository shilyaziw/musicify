<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Checkbox Styles -->
    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="#374151" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style Selector="CheckBox:checked">
        <Setter Property="Foreground" Value="#374151" />
    </Style>

    <!-- RadioButton Styles -->
    <Style Selector="RadioButton">
        <Setter Property="Foreground" Value="#374151" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style Selector="RadioButton:checked">
        <Setter Property="Foreground" Value="#374151" />
    </Style>

    <!-- Ensure TextBlock inherits parent's foreground color -->
    <Style Selector="Button.primary TextBlock">
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.primary:pointerover TextBlock">
        <Setter Property="Foreground" Value="#4F46E5" />
    </Style>

    <Style Selector="Button.primary:pointerover Path">
        <Setter Property="Fill" Value="#4F46E5" />
    </Style>

    <Style Selector="Button.primary:pressed TextBlock">
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.secondary TextBlock">
        <Setter Property="Foreground" Value="#6366F1" />
    </Style>

    <Style Selector="Button.secondary:pointerover TextBlock">
        <Setter Property="Foreground" Value="#6366F1" />
    </Style>

    <Style Selector="Button.secondary:pressed TextBlock">
        <Setter Property="Foreground" Value="#6366F1" />
    </Style>

</Styles>
