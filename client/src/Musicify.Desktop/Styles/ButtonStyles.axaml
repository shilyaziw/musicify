<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Button -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="#6366F1" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24,16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style Selector="Button.primary:pointerover">
        <Setter Property="Background" Value="#4F46E5" />
    </Style>

    <Style Selector="Button.primary:pressed">
        <Setter Property="Background" Value="#4338CA" />
    </Style>

    <Style Selector="Button.primary:disabled">
        <Setter Property="Background" Value="#D1D5DB" />
        <Setter Property="Opacity" Value="0.6" />
    </Style>

    <!-- Secondary Button -->
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="#6366F1" />
        <Setter Property="BorderBrush" Value="#6366F1" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24,16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style Selector="Button.secondary:pointerover">
        <Setter Property="Background" Value="#EEF2FF" />
    </Style>

    <Style Selector="Button.secondary:pressed">
        <Setter Property="Background" Value="#E0E7FF" />
    </Style>

    <!-- Large Button -->
    <Style Selector="Button.large">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinHeight" Value="56" />
    </Style>

    <!-- Icon Button -->
    <Style Selector="Button.icon">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
    </Style>

    <Style Selector="Button.icon:pointerover">
        <Setter Property="Background" Value="#F3F4F6" />
    </Style>

    <!-- Project Item Button -->
    <Style Selector="Button.project-item">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#E5E7EB" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.project-item:pointerover">
        <Setter Property="Background" Value="#F9FAFB" />
        <Setter Property="BorderBrush" Value="#6366F1" />
    </Style>

    <Style Selector="Button.project-item:pressed">
        <Setter Property="Background" Value="#F3F4F6" />
    </Style>

</Styles>
